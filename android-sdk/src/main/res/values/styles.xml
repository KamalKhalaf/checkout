<resources>

    <!-- Default app theme for SDK -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Theme added for unit test-->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- TOOLBAR COLOR. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--FIELDS HIGHLIGHT COLOR-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--PAY/DONE BUTTON COLOR-->
        <item name="colorButtonNormal">@color/colorLightGreen</item>
        <!--HELPER LABELS AND UNSELECTED FIELD COLOR-->
        <item name="colorControlNormal">@color/colorNormalStateController</item>
        <!--FIELDS SELECTED-->
        <item name="colorControlActivated">@color/colorLightGreen</item>
        <!--PRIMARY TEXT COLOR-->
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/error</item>
    </style>

</resources>
